= form_for(@target) do |f|
  - if @target.errors.any?
    #error_explanation
      h2
        = pluralize(@target.errors.count, "error")
        |  prohibited this target from being saved:
      ul
        - @target.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label :type
    br
    = f.number_field :type
  .field
    = f.label :title
    br
    = f.text_area :title
  .field
    = f.label :description
    br
    = f.text_field :description
  .field
    = f.label :text
    br
    = f.text_field :text
  .field
    = f.label :precondition
    br
    = f.text_field :precondition
  .field
    = f.label :text
    br
    = f.text_field :text
  .field
    = f.label :habit_id
    br
    = f.text_field :habit_id
  .actions
    = f.submit
