<p id="notice"><%= notice %></p>

<h1>Listing Targets</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Description</th>
      <th>Text</th>
      <th>Precondition</th>
      <th>Text</th>
      <th>Habit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @targets.each do |target| %>
      <tr>
        <td><%= target.type %></td>
        <td><%= target.title %></td>
        <td><%= target.description %></td>
        <td><%= target.text %></td>
        <td><%= target.precondition %></td>
        <td><%= target.text %></td>
        <td><%= target.habit %></td>
        <td><%= link_to 'Show', target %></td>
        <td><%= link_to 'Edit', edit_target_path(target) %></td>
        <td><%= link_to 'Destroy', target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

